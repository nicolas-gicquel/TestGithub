			</div>

			<div class="col-4 text-end hlogggin">
				<div class="header-social-links d-flex justify-content-end align-items-center zxdroite">
					{% if app.user %}
						{% if app.user.avatar is empty %}
							<i class="fa-solid fa-user-tie"></i>
						{% else %}
							<img class="roundedImage" src="{{ asset('divers/avatars/' ~ app.user.avatar) }}" style="width:25px; height:25px; border-radius:50%">&ensp;
