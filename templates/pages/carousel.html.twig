<div id="carouselExampleSlidesOnly" class="carousel slide col-md-8 mx-auto" data-bs-ride="carousel" style="max-width: 800px;">
    <div class="carousel-inner">
        {% for post in posts %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
                <img src="{{ asset('divers/images/' ~ post.image1) }}" class="img-fluid" style="width:100%; height:470px; object-fit: cover;" alt="{{ post.title }}">
                <div class="carousel-caption d-none d-md-block">
                    <h3>{{ post.title }}</h1>
                    <a href="{{ path('show', {id: post.id }) }}" class="btn btn-danger btn-lg mt-3">Voir +</a>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>