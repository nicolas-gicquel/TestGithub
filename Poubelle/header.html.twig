						{% endif %}
						<a class="loggouts ms-3" href="{{ path('app_logout') }}">
							<i class="fa-solid fa-power-off"></i>
						</a>
						{% if app.user.opption is same as('yes') %}
							<a class="zxadmin ms-3" href="{{ path('admin') }}">
								<i class="fa-solid fa-laptop"></i>
							</a>
						{% endif %}
					{% else %}
						<a class="mylog" style="margin-top: 10px;" href="{{ path('app_login') }}">

