{# templates/contact/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="container-fluid ">
		<div class="container ">
			<div class="row justify-content-center">

				<div class="col-md-4"></div>

				<!-- Colonne centrale contenant le formulaire -->
				<div class="col-md-4 contactee">
					<h2 class="mb-5 titreform">Contactez moi</h2>

					{{ form_start(form, {'attr': {'style': 'width: 100%;'}}) }}

					<!-- Name input -->
					<div class="form-outline mb-4">
						{{ form_widget(form.name, {attr: { class: 'form-control', placeholder: 'Nom' } }) }}
					</div>

					<!-- Email input -->
					<div class="form-outline mb-4">
						{{ form_widget(form.email, {attr: { class: 'form-control', placeholder: 'Adresse Mail' } }) }}
					</div>

					<!-- Message input -->
					<div class="form-outline mb-4">
						{{ form_widget(form.message, {attr: { class: 'form-control', placeholder: 'Message', rows: '6', style: 'height: 150px;' } }) }}
					</div>

					<!-- Submit button -->
					<div class="text-center d-flex justify-content-center">
						<button type="submit" class="ycta">
							<span>Envoyer</span>
							<div class="ycta-icon">
								<svg width="13px" height="10px" viewbox="0 0 13 10">
									<path d="M1,5 L11,5"></path>
									<polyline points="8 1 12 5 8 9"></polyline>
								</svg>
							</div>
						</button>
					</div>

					
					{% for message in app.flashes('success') %}
						<div class="alert alert-success mt-3">
							{{ message }}
						</div>
					{% endfor %}
				</div>

				<div class="col-md-4"></div>
			</div>
		</div>
	</div>
{% endblock %}
