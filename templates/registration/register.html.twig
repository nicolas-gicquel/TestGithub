{% extends 'base.html.twig' %}

{% block title %}
	Formulaire d'tion
{% endblock %}

{% block body %}
	<div class="container-fluid formul">
		<div class="container">
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<h3 class="mb-5 titreform">Formulaire d'inscription</h3>

					<!--Section pour le formulaire-->
					<form method="post" enctype="multipart/form-data">
						{{ form_errors(registrationForm) }}
						{{ form_start(registrationForm) }}
						{{ form_widget(registrationForm._token) }}

						<div class="mb-3">
							{{ form_widget(registrationForm.firstname, { attr: { class: 'form-control', placeholder: 'Firstname' } }) }}
							{{ form_errors(registrationForm.firstname) }}
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.lastname, { attr: { class: 'form-control', placeholder: 'Lastname' } }) }}
							{{ form_errors(registrationForm.lastname) }}
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.email, { attr: { class: 'form-control', placeholder: 'Email' } }) }}
							{{ form_errors(registrationForm.email) }}
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.pseudo, { attr: { class: 'form-control', placeholder: 'Pseudo' } }) }}
							{{ form_errors(registrationForm.pseudo) }}
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.city, { attr: { class: 'form-control', placeholder: 'City' } }) }}
							{{ form_errors(registrationForm.city) }}
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.avatar, { attr: { class: 'form-control' }, type: 'file', mapped: false }) }}
							
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.country, { attr: { class: 'form-control', placeholder: 'Country' } }) }}
							{{ form_errors(registrationForm.country) }}
						</div>
						<div class="mb-3">
							{{ form_widget(registrationForm.plainPassword, { label: 'Password', attr: { class: 'form-control', placeholder: 'Entrez votre mot de passe' } }) }}
							{{ form_errors(registrationForm.plainPassword) }}
						</div>
						<div class="mb-3 d-flex align-items-center">
							{{ form_widget(registrationForm.agreeTerms, { attr: { class: 'form-check-input mr-2' } }) }}&ensp;
							<label class="form-check-label rgpd">RGPD</label>
						</div>
						
						<!-- Section pour les boutons-->
						<div class="row mb-5 d-flex justify-content-center">
							<div class="col-md-5 d-flex justify-content-center">
								<button type="submit" class="ycta">
									<span>Envoyer</span>
									<div class="ycta-icon">
										<svg width="13px" height="10px" viewbox="0 0 13 10">
											<path d="M1,5 L11,5"></path>
											<polyline points="8 1 12 5 8 9"></polyline>
										</svg>
									</div>
								</button>
							</div>

							<div class="p">
								Si vous avez un compte ?
								<a class="redirconnexion"href="{{ path('app_login') }}">Connecter-vous</a>
								
							</div>
						</div>

						{{ form_end(registrationForm) }}
					</form>
				</div>
				<div class="col-md-3"></div>
			</div>
		</div>
	</div>
{% endblock %}
